<div class="container">
  <div class="row">
    <h3 class="py-3">レシピ詳細</h3>
  </div>

  <div class="row">
    <div class="col-3">
      <div>
        <% if @recipe.recipe_image.attached? %>
          <%= image_tag @recipe.recipe_image, size: "300x300", class: "rounded" %>
        <% else %>
          <%= image_tag asset_path('no_image.png'), size: "300x300" %>
        <% end %>
      </div>
      <div class="mt-5">
        <div class="bg-primary rounded-top text-center">
          <h5 class="text-white py-3">cooked by <%= @recipe.customer.nickname %></h5>
        </div>
        <div class="border-bottom">
          <%= simple_format (@recipe.customer.introduction), class: "text-secondary" %>
        </div>
        <%= link_to admin_customer_path(@recipe.customer.id) do %>
          <div>
            <p class="text-dark pt-2"><i class="fas fa-user"></i> <%= @recipe.customer.nickname%> さんのページへ</p>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-6 offset-1 border">
      <div class="d-flex align-items-center border-bottom">
        <h4 class="pt-2"><%= @recipe.title %></h4>
        <div class="ml-auto">
          <%= link_to admin_recipe_path(@recipe.id), data: {confirm: "削除しますか？"}, method: :delete do %>
            <i class="fas fa-trash-alt text-danger"></i>
          <% end %>
        </div>
      </div>
      <%= simple_format(@recipe.body) %>
    </div>
  </div>

  <div class="row mt-5">
    <div class="col-2 offset-3 d-flex align-items-center">
      <h3>コメント</h3>
      <h4><%= @recipe.comments.count %></h4>
    </div>
  </div>

  <div class="row">
    <div class="col-7 offset-3">
      <table class="table table-hover">
        <% @recipe.comments.each do |comment| %>
        <tr>
          <td style="width: 10%">
            <% if comment.customer.profile_image.attached? %>
              <%= image_tag comment.customer.profile_image, size: "50x50", class: "rounded-circle"%>
            <% else %>
              <%= image_tag asset_path('no_image.png'), size: '50x50', class: "rounded-circle"%>
            <% end %>
          </td>
          <td style="width: 10%"><%= comment.customer.nickname %></td>
          <td style="width: 40%"><%= simple_format(comment.comment)%></td>
          <td class="star" style="width: 25%">
            <div id="star-rate<%= comment.id%>"></div>
            <script>
              $('#star-rate<%= comment.id%>').raty({
                starOff   : '<%= asset_path('star-off.png') %>',
                starOn    : '<%= asset_path('star-on.png') %>',
                half      : false,
                readOnly: true,
                score: <%= comment.star %>,
              });
            </script>
          </td>
          <td style="width: 5%">
            <%= link_to admin_recipe_comment_path(comment.recipe.id, comment.id), data: {confirm: "削除しますか？"}, method: :delete do %>
              <i class="fas fa-trash-alt text-danger"></i>
            <% end %>
          </td style="width: 10%">
          <td><%= comment.created_at.strftime('%Y/%m/%d')%></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
