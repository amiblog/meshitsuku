<div class="container">
  <div class="row">
    <div class="col-3">
      <div>
        <% if @recipe.recipe_image.attached? %>
          <%= image_tag @recipe.recipe_image, size: "300x300" %>
        <% else %>
          <%= image_tag 'no_image', size: "300x300" %>
        <% end %>
      </div>
    </div>
    <div class="col-6 offset-1">
      <div class="d-flex align-items-center border-bottom">
        <h4 class="pt-2"><%= @recipe.title %></h4>
        <div class="ml-auto">
          <%= link_to admin_recipe_path(@recipe.id), method: :delete do %>
            <i class="fas fa-trash-alt text-danger"></i>
          <% end %>
        </div>
      </div>
      <%= simple_format(@recipe.body) %>
    </div>
  </div>

  <div class="row mt-5">
    <div class="col-6 offset-4 d-flex align-items-center">
      <h3>コメント</h3>
      <h4><%= @recipe.comments.count %></h4>
    </div>
  </div>

  <div class="row">
    <div class="col-6 offset-4">
      <table class="table table-hover">
        <% @recipe.comments.each do |comment| %>
        <tr>
          <td><%= image_tag comment.customer.profile_image, size: "50x50", class: "rounded-circle"%></td>
          <td><%= comment.customer.nickname %></td>
          <td><%= simple_format(comment.comment)%></td>
          <td>
            <%= link_to admin_recipe_comment_path(comment.recipe.id, comment.id), method: :delete do %>
              <i class="fas fa-trash-alt text-danger"></i>
            <% end %>
          </td>
          <td><%= comment.created_at.strftime('%Y/%m/%d')%></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
