<div class="container">
  <div class="row justify-content-end">
    <div class="col-3">
      <%= search_form_for @q, url: search_recipes_path do |f| %>
        <%= f.search_field :title_cont, placeholder: "レシピ検索" %>
        <%= f.submit '検索' %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <h3>検索結果</h3>
  </div>
  <div class="row">
    <div class="col-12">
      <% @results.each do |recipe| %>
        <div class="card" style="width: 10rem;">
          <%= image_tag recipe.recipe_image, size:'158x158', class: "card-image-top"%>
          <div class="card-body">
            <%= link_to recipe_path(recipe.id) do %>
              <p class="card-text"><%= recipe.title%></p>
            <% end %>
            <%= link_to customer_path(recipe.customer.id) do %>
              <p class="card-text"><%= recipe.customer.nickname %></p>
            <% end %>
            <%= link_to "#{recipe.comments.count}コメント", recipe_path(recipe.id)%>
            <%= link_to "♥#{recipe.favorites.count}", recipe_path(recipe.id)%>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
