<div class="container">
  <div class="row">
    <div class="col-5">
      <%= form_with model: @recipe do |f| %>
        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :body %>
          <%= f.text_area :body, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :レシピ画像 %>
          <%= f.file_field :recipe_image, accept: "image/*", class: "form-control" %>
        </div>
          <div class="form-group">
            <%= f.submit "更新を保存"%>
          </div>
      <% end %>
    </div>
  </div>
</div>

