<%= form_with model: recipe do |f| %>
  <div class="form-group">
    <%= f.label :レシピ名 %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :作り方 %>
    <%= f.text_area :body, rows: '10', class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :写真 %>
    <%= f.file_field :recipe_image, accept: "image/*", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit obj, class: "btn btn-primary btn-sm"%>
  </div>
<% end %>
