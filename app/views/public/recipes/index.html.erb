<div class="container">
  <div class="row justify-content-end">
    <div class="col-3">
      <%= search_form_for @q, url: search_recipes_path do |f| %>
        <%= f.search_field :title_cont, placeholder: "レシピ検索" %>
        <%= f.submit '検索' %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <h3 class="py-3">レシピ一覧</h3>
  </div>
  <%= render 'public/recipes/recipes_index', obj: @recipes %>
</div>
