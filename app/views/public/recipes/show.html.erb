<div class="container">
  <div class="row">
    <div class="col-3">
      <div>
        <% if @recipe.recipe_image.attached? %>
          <%= image_tag @recipe.recipe_image, size: "300x300", class: "rounded" %>
        <% else %>
          <%= image_tag 'no_image', size: "300x300" %>
        <% end %>
      </div>
    </div>
    <div class="col-6 offset-1 border">
      <div class="d-flex align-items-center border-bottom">
        <h4 class="pt-2"><%= @recipe.title %></h4>
        <% if @recipe.customer.id==current_customer.id%>
          <div class="ml-auto">
            <%= link_to edit_recipe_path(@recipe.id) do%>
              <i class="fas fa-edit mr-2"></i>
            <% end %>
            <%= link_to recipe_path(@recipe.id), method: :delete do %>
              <i class="fas fa-trash-alt"></i>
            <% end %>
          </div>
        <% end %>
      </div>
      <%= simple_format(@recipe.body) %>
    </div>
  </div>

  <div class="row mt-5">
    <div class="col-2 offset-4 d-flex align-items-center">
      <h3>コメント</h3>
      <h4><%= @recipe.comments.count %></h4>
    </div>
      <div class="col-2 offset-2 d-flex align-items-center favorite_btn">
        <%= render 'public/favorites/btn', recipe: @recipe%>
      </div>
  </div>

  <div class="row">
    <div class="col-6 offset-4">
      <table class="table table-hover">
        <% @recipe.comments.each do |comment| %>
        <tr>
          <td><%= image_tag comment.customer.profile_image, size: "50x50", class: "rounded-circle"%></td>
          <td><%= comment.customer.nickname %></td>
          <td><%= simple_format(comment.comment)%></td>
          <td class="d-flex">
            <% if comment.customer.id==current_customer.id %>
              <%= link_to root_path do %>
                <i class="fas fa-edit mr-2"></i>
              <% end %>
              <%= link_to recipe_comment_path(comment.recipe.id, comment.id), method: :delete do %>
                <i class="fas fa-trash-alt"></i>
              <% end %>
            <% end %>
          </td>
          <td><%= comment.created_at.strftime('%Y/%m/%d')%></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-6 offset-4">
      <%= form_with model: [@recipe, @comment] do |f| %>
        <%= f.text_area :comment, rows: '5', placeholder: 'コメントをここに', class: "form-control" %>
        <%= f.submit "送信"%>
      <% end %>
    </div>
  </div>
</div>
