<div class="new_img">
  <div class="container">
    <div class="row">
      <div class="col-3 offset-8" style="margin-top: 200px">
        <h2>新規登録</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "public/shared/error_messages", resource: resource %>

          <div class="field">
            <%= f.label :名前%><br />
            <%= f.text_field :name, autofocus: true, placeholder: "山田太郎" %>
          </div>

          <div class="field mt-2">
            <%= f.label :ニックネーム（表示名） %><br />
            <%= f.text_field :nickname, autofocus: true, placeholder: "たろ" %>
          </div>

          <div class="field mt-2">
            <%= f.label :メールアドレス %><br />
            <%= f.email_field :email, autofocus: true, placeholder: "example@example.com" %>
          </div>

          <div class="field mt-2">
            <%= f.label :パスワード %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>

          <div class="field mt-2">
            <%= f.label :パスワード確認 %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>

          <div class="actions mt-2">
            <%= f.submit "新規登録", class: "btn btn-primary btn-sm" %>
          </div>
        <% end %>

        <%= render "public/shared/links" %>
      </div>
    </div>
  </div>
</div>

