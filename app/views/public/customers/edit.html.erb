<div class="container">
  <div class="row justify-content-center">
    <div class="col-6">
      <%= form_with model: @customer, method: :patch do |f| %>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :nickname %>
          <%= f.text_field :nickname, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :profile %>
          <%= f.text_area :introduction, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :profile_image %>
          <%= f.file_field :profile_image, class: "form-control" %>
        </div>
        <div class="form-group d-flex">
          <p><%= f.submit "更新を保存", class: "btn btn-primary btn-sm"%></p>
          <p class="ml-auto"><%= link_to "退会する", customers_unsubscribe_path, data: {confirm: "退会しますか？"}, class:"btn btn-danger btn-sm"%></p>
        </div>
      <% end %>
    </div>
  </div>
</div>
