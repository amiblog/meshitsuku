<div class="container">
  <div class="row">
    <div class="col-6">
      <%= form_with model: @customer, method: :patch do |f| %>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :nickname %>
          <%= f.text_field :nickname, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :profile %>
          <%= f.text_area :introduction, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :profile_image %>
          <%= f.file_field :profile_image, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit "更新を保存"%>
          <%= link_to "退会する", customers_unsubscribe_path, data: {confirm: "退会しますか？"}, class:"btn btn-danger btn-block btn-sm"%>
        </div>
      <% end %>
    </div>
  </div>
</div>
