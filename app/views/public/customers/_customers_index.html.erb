<div class="row mt-5">
  <div class="col-12 d-flex flex-wrap">
    <% obj.each do |customer| %>
      <%= link_to customer_path(customer.id) do %>
        <div class="card mr-5 mb-5" style="width: 10rem;">
          <% if customer.profile_image.attached? %>
            <%= image_tag customer.profile_image, size:'158x158', class: "card-image-top"%>
          <% else %>
            <%= image_tag asset_path('no_image.png'), size:'158x158', class: "card-image-top"%>
          <% end %>
          <div class="card-body">
            <p class="card-text text-truncate text-dark"><i class="fas fa-user text-secondary"></i> <%= customer.nickname%></p>
            <p class="card-text text-dark"><%= "投稿数: #{customer.recipes.count}"%></p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
<div class="row justify-content-center">
  <%= paginate obj %>
</div>
